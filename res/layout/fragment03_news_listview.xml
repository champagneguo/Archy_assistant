<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_listview_item_split"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="8dp" >

        <TextView
            android:id="@+id/fragment03_news_listview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/fragment03_news_listview_photo"
            android:maxLines="2"
            android:textColor="#313233"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/fragment03_news_listview_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/action_settings" />

        <TextView
            android:id="@+id/fragment03_news_listview_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="7dp"
            android:textColor="#7A7C80"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fragment03_news_listview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/fragment03_news_listview_source"
            android:textColor="#7A7C80"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>