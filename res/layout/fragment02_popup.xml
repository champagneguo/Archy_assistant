<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popview_bg"
    android:orientation="vertical"
    android:padding="6dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="新建试卷"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="试卷题目："
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/fragment02_popup_name"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="试卷类别："
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/fragment02_popup_spinner"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#ffffff"
        android:gravity="center_vertical|center_horizontal"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="创建时间："
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/fragment02_popup_time"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#ffffff"
        android:gravity="left|center_vertical"
        android:text="2014-11-08" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <Button
            android:id="@+id/fragment02_popup_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/selector_white_btn"
            android:text="取消"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <Button
            android:id="@+id/fragment02_popup_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/selector_white_btn"
            android:text="确定"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>

</LinearLayout>