<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bk22" 
    >

    <EditText
        android:id="@+id/activity04_newfolder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/activity04_newfolder_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/activity04_newfolder_name"
        android:ems="10"
        android:hint="/sdcard/考古图片/" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/activity04_newfolder_name"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:text="文件夹路径：" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="文件夹名：" />

    <Button
        android:id="@+id/activity04_newfolder_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activity04_newfolder_submit"
        android:layout_marginLeft="43dp"
        android:layout_toRightOf="@+id/activity04_newfolder_submit"
        android:text="取 消" />

 <Button
        android:id="@+id/activity04_newfolder_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/activity04_newfolder_path"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="45dp"
        android:text="确 认" />
   
</RelativeLayout>